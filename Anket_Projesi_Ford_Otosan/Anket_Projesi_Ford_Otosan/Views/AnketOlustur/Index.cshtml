@model  IEnumerable< Anket_Projesi_Ford_Otosan.Models.DropdownDoldurma>
@{
    ViewBag.Title = "Anket Oluştur";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anket Oluşturma -</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" href="~/Anket/style.css" />
    <link href=”//cdn.jsdelivr.net/npm/sweetalert2/theme-dark@4/dark.css” rel=”stylesheet”>

    <style>
        ::-webkit-scrollbar {
            background-color: white;
            width: 8px;
        }

        ::-webkit-scrollbar-thumb {
            background-color: blue;
            border-radius: 8px;
        }
    </style>
</head>
<body>

    <form method="post" id="anketolustur-form" style="margin-top:35px;" action="/AnketOlustur/Index" class="container-fluid">
        <fieldset id="SubmitForm">
            <div id="anketolustur-div" style="border:1px solid blue; height:auto; position:relative; margin:auto; ">
                <div style="background-color:blue; width:100%; height:100px; ">
                    <h2 style="color:white; padding:30px;"><i class="fa-solid fa-circle-plus"></i> Anket Oluşturma</h2>
                </div>
                <div class="row mx-0" style="margin:20px;">
                    <div class="col-lg-1 col-sm-12">
                        <label>Anket Başlığı</label>
                    </div>
                    <div class="col-lg-3 col-sm-12 input-sm">
                        <input type="text" class="form-control" id="anketbasligi" aria-describedby="emailHelp" placeholder="Anket başlığı giriniz" name="CH_ANKET">
                    </div>

                    <div class="col-lg-1 col-sm-12">
                        <label>Yayın Tarihi</label>
                    </div>
                    <div class="input-group date col-lg-3 col-sm-12" id="datepicker1">
                        <input type="date" class="form-control format" id="yayintarihi" value="Tarih seçiniz" name="DT_YAYIN_TARIHI" />
                    </div>
                    <div class="col-lg-1 col-sm-12">
                        <label>Bitiş Tarihi</label>
                    </div>
                    <div class="input-group date col-lg-3 col-sm-12" id="datepicker1">
                        <input type="date" class="form-control format" id="bitistarihi" value="Tarih seçiniz" name="DT_BITIS_TARIHI" />
                    </div>

                </div>

                <div class="row mx-0" style="margin:20px; display:none;" id="myfirstdiv1">
                    <div class="col-lg-1 col-sm-12">
                        <label>Soru</label>
                    </div>
                    <div class="col-lg-3 col-sm-12 input-sm">
                        <input type="text" class="form-control" id="soru1" aria-describedby="emailHelp" placeholder="Soru giriniz" name="CH_SORU">
                    </div>
                    <div class="col-lg-1 col-sm-12">
                        <label>Soru Türü</label>
                    </div>
                    <div class="input-group date col-lg-3 col-sm-12" id="dropcek1">
                        <select class="form-select" aria-label="Default select example" id="dropdown1" name="deneme">
                            <option value="0">Soru türünü seçiniz</option>

                            @foreach (var item in Model)
                            {


                                if (item.CH_REF_ACIKLAMA != null)
                                {
                                    <option value="@item.SQ_REF_ID">@item.CH_REF_ANAHTAR - @item.CH_REF_ACIKLAMA </option>
                                }
                                else
                                {
                        <option value="@item.SQ_REF_ID">@item.CH_REF_ANAHTAR </option>
                                }

                            }
                        </select>
                    </div>
                    <div class="col-lg-3 col-sm-12 input-group" style="position:relative;text-align:center;">
                        <button class="add_form_field btn btn-primary" type="button" style="display: none; position: absolute; left: 35%" id="secekle1">Seçenek Ekle</button>
                    </div>
                    <div class="row mx-0 cevaplarekle1" style="margin-top:20px;">

                    </div>
                </div>
                <div style="padding:10px;">
                    <button type="button" id="kaydet" class="btn btn-primary" style="position:relative;bottom:0;">Kaydet</button>
                </div>
            </div>

        </fieldset>
        
    </form>

    <script>
        var error = document.getElementById("error-alert");
        var error_close = document.getElementById("error-close");
        var wrappersoru = $("#anketolustur-div");
        var sayi = 2, adet = 1;
        var rep = 1;
        var x = 0;
        $(document).ready(function () {
            var max_fields = 4;
            
            var wrapper = $(".cevaplarekle1");
            var add_button = $("#secekle1");

            $(add_button).click(function (e) {
                e.preventDefault();
                if (x < max_fields) {
                    x++;

                    $(wrapper).append('<div class=" input-sm col-lg-4 col-sm-12">' +
                        '<input type="text" class="form-control " placeholder="Cevap" aria-label="Soru" aria-describedby="soru0" name="CH_SECENEK" id="secenek' + x + '"><a href="#" class="deletecevap btn btn-default col-lg-1 col-sm-12">Sil</a></div>' +
                        '</div>');
                }
                else {
                    /*alert("4'den daha fazla seçenek eklenemez")*/
                    swal
                        ({
                            title: "Hata!",
                            text: "4'den daha fazla seçenek eklenemez.",
                            button: "Tamam",
                            icon: "error",
                        });
                }
            });
            $(wrapper).on("click", ".deletecevap", function (e) {
                e.preventDefault();
                $(this).parent('div').remove();
                x--;

            });
        });


        var drop = document.getElementById("dropdown1");
        var btn = document.getElementById("secekle1");
        var scnk = document.getElementById("secenek");
        function dropdown() {
            if (drop.options[drop.selectedIndex].value == "9") {
                btn.style.display = 'block';
                scnk.style.display = 'flex';

            }
            else {
                btn.style.display = 'none';
                scnk.style.display = 'none';
            }

        }

        drop.addEventListener("change", dropdown);

        var adet = 0;
        var anketsayac = 0;

        $("#kaydet").click(function () {
            adet++;
            if ($("#anketbasligi").val() == "" || $("#yayintarihi").val() == "" || $("#bitistarihi").val() == "") {
                adet--;
                swal({
                    title: "Hata!",
                    text: "Alanlar Boş Geçilemez",
                    button: "Tamam",
                    icon: "error",
                });
            }
            else {
                var model1 = { CH_ANKET: $("#anketbasligi").val(), DT_YAYIN_TARIHI: $("#yayintarihi").val(), DT_BITIS_TARIHI: $("#bitistarihi").val()};
                var cevaplar = "";
                var soruturu = document.getElementById("dropdown1");
                ref_id = soruturu.options[soruturu.selectedIndex].value;
                for (var i = 1; i <= x; i++) {
                    cevaplar += $("#secenek" +i ).val() + ";";
                }
                
                if (anketsayac < 1) {
                    $.ajax
                        ({
                            type: "Post",
                            url: "/AnketOlustur/AnketKaydet",
                            data: model1,
                            success: function () {
                                anketsayac++;
                                var sorudiv = document.getElementById("myfirstdiv1");
                                sorudiv.style.display = "flex";
                            }

                        });
                }
                else {
                    var model2 = { CH_SORU: $("#soru1").val(), Cevaplar: cevaplar, CD_REF_ID: ref_id, AnketSayac: anketsayac, CevapSayac: x };
                    $.ajax
                        ({
                            type: "Post",
                            url: "/AnketOlustur/AnketKaydet",
                            data: model2,
                            success: function () {
                                anketsayac++;
                                var sorudiv = document.getElementById("myfirstdiv1");
                                sorudiv.style.display = "flex";
                                if (adet > 1) {
                                    swal(adet + ". Soruyu Eklemek İstermisiniz?", {
                                        buttons: {
                                            cancel: "Hayır",
                                            catch: {
                                                text: "Evet",
                                                value: "catch",
                                            },

                                        },
                                    })
                                        .then((value) => {
                                            switch (value) {
                                                case "catch":
                                                    break;

                                                default:
                                                    location.reload();
                                                    adet--;
                                            }
                                        });
                                }
                                else {

                                }

                            }

                        });
                }
                
                
            }
        });
        

        function dropdown_Info(val) {

            var say = val.substr(8);
            var buton = document.getElementById("secekle" + say);
            var secenek = document.getElementById("cevaplarekle" + say);
            var secilidrop = document.getElementById("dropdown" + say);
            if (secilidrop.options[secilidrop.selectedIndex].value == "9") {
                buton.style.display = 'block';
                secenek.style.display = 'flex';
            }
            else {
                buton.style.display = 'none';
                secenek.style.display = 'none';
            }
            var y = 1;
            $(buton).click(function (e) {
                e.preventDefault();
                if (y <= 4) {
                    y++;
                    $(secenek).append('<div class=" input-sm col-lg-4 col-sm-12">' +
                        '<input type="text" id="soru' + y + '" class="form-control " placeholder="Cevap" aria-label="Soru" aria-describedby="soru1" name="CH_SECENEK' + y + '">' +
                        '<a href="#" class="deletecevap btn btn-default col-lg-1 col-sm-12">Sil</a>' +
                        '</div>');

                }
                else {
                    /*alert("4'den daha fazla seçenek eklenemez")*/
                    swal
                        ({
                            title: "Hata!",
                            text: "4'den daha fazla seçenek eklenemez.",
                            button: "Tamam",
                            icon: "error",
                        });
                }

            });

            $(secenek).on("click", ".deletecevap", function (e) {
                e.preventDefault();
                $(this).parent('div').remove();
                if (y > 1) {
                    y--;
                }
            });
        }

    </script>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</body>
</html>

